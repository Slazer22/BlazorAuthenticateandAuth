@page "/counter"
@attribute [Authorize(Roles ="DeathStroke")]

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<AuthorizeView Roles="Darkseid">
    <Authorized>
          <span>You are authorized as Christopher.</span>

    </Authorized>
    <NotAuthorized>
    <span>You are not authorized, pal!</span>
    </NotAuthorized>
</AuthorizeView>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
